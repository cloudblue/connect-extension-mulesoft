<mule xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:http="http://www.mulesoft.org/schema/mule/http"
      xmlns:cloudblue-connect="http://www.mulesoft.org/schema/mule/cloudblue-connect"
      xsi:schemaLocation="http://www.mulesoft.org/schema/mule/core
            http://www.mulesoft.org/schema/mule/core/current/mule.xsd
            http://www.mulesoft.org/schema/mule/http 
            http://www.mulesoft.org/schema/mule/http/current/mule-http.xsd
            http://www.mulesoft.org/schema/mule/cloudblue-connect 
            http://www.mulesoft.org/schema/mule/cloudblue-connect/current/mule-cloudblue-connect.xsd">
    
    <http:listener-config name="listenerConfig">
        <http:listener-connection host="localhost" port="${port}"/>
    </http:listener-config>
    
    <flow name="getRequestServer">
        <http:listener path="/requests/${request_id}" config-ref="listenerConfig"/>
        <set-payload value="{'id':'${request_id}'}"/>
    </flow>

    <flow name="listRequestsServer">
        <http:listener path="/requests" config-ref="listenerConfig"/>
        <set-payload value="[{'id':'${request_id}'}]"/>
    </flow>
    
    <flow name="getAssetServer">
        <http:listener path="/assets/${asset_id}" config-ref="listenerConfig"/>
        <set-payload value="{'id':'${asset_id}'}"/>
    </flow>

    <flow name="listAssetsServer">
        <http:listener path="/assets" config-ref="listenerConfig"/>
        <set-payload value="[{'id':'${asset_id}'}]"/>
    </flow>

    <flow name="getCaseServer">
        <http:listener path="/helpdesk/cases/${case_id}" config-ref="listenerConfig"/>
        <set-payload value="{'id':'${case_id}'}"/>
    </flow>

    <flow name="listCasesServer">
        <http:listener path="/helpdesk/cases" config-ref="listenerConfig"/>
        <set-payload value="[{'id':'${case_id}'}]"/>
    </flow>

    <flow name="listConversationMessagesServer">
        <http:listener path="/conversations/${conversation_id}/conversations" config-ref="listenerConfig"/>
        <set-payload value="[{'id':'${conversation_id}'}]"/>
    </flow>

    <flow name="getTierAccountServer">
        <http:listener path="/tier/accounts/${tierAccount_id}" config-ref="listenerConfig"/>
        <set-payload value="{'id':'${tierAccount_id}'}"/>
    </flow>

    <flow name="listTierAccountsServer">
        <http:listener path="/tier/accounts/" config-ref="listenerConfig"/>
        <set-payload value="[{'id':'${tierAccount_id}'}]"/>
    </flow>

    <flow name="getTierAccountRequestServer">
        <http:listener path="/tier/account-requests/${tierAccountRequest_id}" config-ref="listenerConfig"/>
        <set-payload value="{'id':'${tierAccountRequest_id}'}"/>
    </flow>

    <flow name="listTierAccountRequestsServer">
        <http:listener path="/tier/account-requests/" config-ref="listenerConfig"/>
        <set-payload value="[{'id':'${tierAccountRequest_id}'}]"/>
    </flow>

    <flow name="getTierConfigServer">
        <http:listener path="/tier/configs/${tierConfig_id}" config-ref="listenerConfig"/>
        <set-payload value="{'id':'${tierConfig_id}'}"/>
    </flow>

    <flow name="listTierConfigsServer">
        <http:listener path="/tier/configs/" config-ref="listenerConfig"/>
        <set-payload value="[{'id':'${tierConfig_id}'}]"/>
    </flow>

    <flow name="getTierConfigRequestServer">
        <http:listener path="/tier/config-requests/${tierConfigRequest_id}" config-ref="listenerConfig"/>
        <set-payload value="{'id':'${tierConfigRequest_id}'}"/>
    </flow>

    <flow name="listTierConfigRequestsServer">
        <http:listener path="/tier/config-requests/" config-ref="listenerConfig"/>
        <set-payload value="[{'id':'${tierConfigRequest_id}'}]"/>
    </flow>

    <flow name="listUsageReportsServer">
        <http:listener path="/usage/files/" config-ref="listenerConfig"/>
        <set-payload value="[{'id':'${usage_report_id}'}]"/>
    </flow>

    <flow name="getUsageReportServer">
        <http:listener path="/usage/files/${usage_report_id}" config-ref="listenerConfig"/>
        <set-payload value="{'id':'${usage_report_id}'}"/>
    </flow>

    <flow name="listChunkFilesServer">
        <http:listener path="/usage/chunks/" config-ref="listenerConfig"/>
        <set-payload value="[{'id':'${chunk_file_id}'}]"/>
    </flow>

    <flow name="getChunkFilesServer">
        <http:listener path="/usage/chunks/${chunk_file_id}" config-ref="listenerConfig"/>
        <set-payload value="{'id':'${chunk_file_id}'}"/>
    </flow>

    <flow name="getProductServer">
        <http:listener path="/products/${product_id}" config-ref="listenerConfig"/>
        <set-payload value="{'id':'${product_id}'}"/>
    </flow>

    <flow name="listProductsServer">
        <http:listener path="/products/" config-ref="listenerConfig"/>
        <set-payload value="[{'id':'${product_id}'}]"/>
    </flow>

    <flow name="getProductItemServer">
        <http:listener path="/products/${product_id}/items/${productItem_id}" config-ref="listenerConfig"/>
        <set-payload value="{'id':'${productItem_id}'}"/>
    </flow>

    <flow name="listProductItemsServer">
        <http:listener path="/products/${product_id}/items" config-ref="listenerConfig"/>
        <set-payload value="[{'id':'${productItem_id}'}]"/>
    </flow>

    <flow name="listUsageRecordServer">
        <http:listener path="/usage/records/"
                       config-ref="listenerConfig"/>
        <set-payload value="[{'id':'${usage_record_id}'}]"/>
    </flow>

    <flow name="getUsageRecordServer">
        <http:listener path="/usage/records/${usage_record_id}"
                       config-ref="listenerConfig"/>
        <set-payload value="{'id':'${usage_record_id}'}"/>
    </flow>

    <cloudblue-connect:config name="CloudBlue_Connect_Config_Test">
        <cloudblue-connect:connection token="ApiKey SU-000-000-000:fake-token-001"
                                      connectionTimeout="20000"
                                      endpoint="http://localhost:${port}"/>
    </cloudblue-connect:config>
    
    <flow name="getRequest">
        <cloudblue-connect:get-request config-ref="CloudBlue_Connect_Config_Test"
                                       id="${request_id}"/>
    </flow>
    
    <flow name="getAsset">
        <cloudblue-connect:get-asset config-ref="CloudBlue_Connect_Config_Test"
                                     id="${asset_id}"/>
    </flow>

    <flow name="getCase">
        <cloudblue-connect:get-case config-ref="CloudBlue_Connect_Config_Test" id="${case_id}"/>
    </flow>

    <flow name="getTierAccount">
        <cloudblue-connect:get-tier-account config-ref="CloudBlue_Connect_Config_Test" 
                                        id="${tierAccount_id}"/>
    </flow>

    <flow name="getTierAccountRequest">
        <cloudblue-connect:get-tier-account-request config-ref="CloudBlue_Connect_Config_Test" 
                                        id="${tierAccountRequest_id}"/>
    </flow>

    <flow name="getTierConfig">
        <cloudblue-connect:get-tier-config config-ref="CloudBlue_Connect_Config_Test" 
                                        id="${tierConfig_id}"/>
    </flow>

    <flow name="getTierConfigRequest">
        <cloudblue-connect:get-tier-config-request config-ref="CloudBlue_Connect_Config_Test" 
                                        id="${tierConfigRequest_id}"/>
    </flow>
    <flow name="getProduct">
        <cloudblue-connect:get-product config-ref="CloudBlue_Connect_Config_Test"
                                        id="${product_id}"/>
    </flow>

    <flow name="listRequestsWithFilter">
        <cloudblue-connect:list-requests config-ref="CloudBlue_Connect_Config_Test">
            <cloudblue-connect:filter >
                <cloudblue-connect:list-filter type="OR" >
                    <cloudblue-connect:filters >
                        <cloudblue-connect:mono-filter type="EQ" property="asset.id" value="AS-0000-0000-0000" />
                        <cloudblue-connect:mono-filter type="EQ" property="status" value="approved" />
                    </cloudblue-connect:filters>
                </cloudblue-connect:list-filter>
            </cloudblue-connect:filter>
            <cloudblue-connect:order-by >
                <cloudblue-connect:properties >
                    <cloudblue-connect:property value="-created" />
                </cloudblue-connect:properties>
            </cloudblue-connect:order-by>
        </cloudblue-connect:list-requests>
    </flow>

    <flow name="getProductItem">
        <cloudblue-connect:get-product-item config-ref="CloudBlue_Connect_Config_Test"
                                        productId="${product_id}" productItemId="${productItem_id}"/>
    </flow>

    <flow name="listRequestsWithoutFilter">
        <cloudblue-connect:list-requests config-ref="CloudBlue_Connect_Config_Test"/>
    </flow>

    <flow name="listAssetsWithFilter">
        <cloudblue-connect:list-assets config-ref="CloudBlue_Connect_Config_Test">
            <cloudblue-connect:filter >
                <cloudblue-connect:list-filter type="AND" >
                    <cloudblue-connect:filters >
                        <cloudblue-connect:mono-filter type="EQ" property="id" value="AS-0000-0000-0000" />
                        <cloudblue-connect:mono-filter type="NE" property="status" value="active" />
                    </cloudblue-connect:filters>
                </cloudblue-connect:list-filter>
            </cloudblue-connect:filter>
        </cloudblue-connect:list-assets>
    </flow>

    <flow name="listAssetsWithoutFilter">
        <cloudblue-connect:list-assets config-ref="CloudBlue_Connect_Config_Test"/>
    </flow>

    <flow name="listCasesWithFilter">
        <cloudblue-connect:list-cases config-ref="CloudBlue_Connect_Config_Test">
            <cloudblue-connect:filter >
                <cloudblue-connect:list-filter type="AND" >
                    <cloudblue-connect:filters >
                        <cloudblue-connect:mono-filter type="EQ" property="id" value="CA-0000-0000" />
                        <cloudblue-connect:mono-filter type="NE" property="state" value="pending" />
                    </cloudblue-connect:filters>
                </cloudblue-connect:list-filter>
            </cloudblue-connect:filter>
        </cloudblue-connect:list-cases>
    </flow>

    <flow name="listCasesWithoutFilter">
        <cloudblue-connect:list-cases config-ref="CloudBlue_Connect_Config_Test"/>
    </flow>

    <flow name="listConversationMessagesWithoutFilter">
        <cloudblue-connect:list-assets config-ref="CloudBlue_Connect_Config_Test"/>
    </flow>

    <flow name="listConversationMessagesWithFilter">
        <cloudblue-connect:list-assets config-ref="CloudBlue_Connect_Config_Test">
            <cloudblue-connect:filter >
                <cloudblue-connect:list-filter type="AND" >
                    <cloudblue-connect:filters >
                        <cloudblue-connect:mono-filter type="EQ" property="conversation_id" value="CO-0000-0000" />
                        <cloudblue-connect:mono-filter type="NE" property="text" value="pending" />
                    </cloudblue-connect:filters>
                </cloudblue-connect:list-filter>
            </cloudblue-connect:filter>
        </cloudblue-connect:list-assets>
    </flow>

    <flow name="listTierAccountsWithoutFilter">
        <cloudblue-connect:list-tier-accounts config-ref="CloudBlue_Connect_Config_Test"/>
    </flow>

    <flow name="listTierAccountsWithFilter">
        <cloudblue-connect:list-tier-accounts config-ref="CloudBlue_Connect_Config_Test">
            <cloudblue-connect:filter >
                <cloudblue-connect:list-filter type="AND" >
                    <cloudblue-connect:filters >
                        <cloudblue-connect:mono-filter type="EQ" property="external_id" value="ABCD-0000-0000" />
                        <cloudblue-connect:mono-filter type="NE" property="name" value="pepe" />
                    </cloudblue-connect:filters>
                </cloudblue-connect:list-filter>
            </cloudblue-connect:filter>
        </cloudblue-connect:list-tier-accounts>
    </flow>

    <flow name="listTierAccountRequestsWithoutFilter">
        <cloudblue-connect:list-tier-account-requests config-ref="CloudBlue_Connect_Config_Test"/>
    </flow>

    <flow name="listTierAccountRequestsWithFilter">
        <cloudblue-connect:list-tier-account-requests config-ref="CloudBlue_Connect_Config_Test">
            <cloudblue-connect:filter >
                <cloudblue-connect:list-filter type="AND" >
                    <cloudblue-connect:filters >
                        <cloudblue-connect:mono-filter type="EQ" property="external_id" value="ABCD-0000-0000" />
                        <cloudblue-connect:mono-filter type="NE" property="name" value="pepe" />
                    </cloudblue-connect:filters>
                </cloudblue-connect:list-filter>
            </cloudblue-connect:filter>
        </cloudblue-connect:list-tier-account-requests>
    </flow>

    <flow name="listTierConfigsWithoutFilter">
        <cloudblue-connect:list-tier-configs config-ref="CloudBlue_Connect_Config_Test"/>
    </flow>

    <flow name="listTierConfigsWithFilter">
        <cloudblue-connect:list-tier-configs config-ref="CloudBlue_Connect_Config_Test">
            <cloudblue-connect:filter >
                <cloudblue-connect:list-filter type="AND" >
                    <cloudblue-connect:filters >
                        <cloudblue-connect:mono-filter type="EQ" property="status" value="active" />
                        <cloudblue-connect:mono-filter type="NE" property="name" value="pepe" />
                    </cloudblue-connect:filters>
                </cloudblue-connect:list-filter>
            </cloudblue-connect:filter>
        </cloudblue-connect:list-tier-configs>
    </flow>

    <flow name="listTierConfigRequestsWithoutFilter">
        <cloudblue-connect:list-tier-config-requests config-ref="CloudBlue_Connect_Config_Test"/>
    </flow>

    <flow name="listTierConfigRequestsWithFilter">
        <cloudblue-connect:list-tier-config-requests config-ref="CloudBlue_Connect_Config_Test">
            <cloudblue-connect:filter >
                <cloudblue-connect:list-filter type="AND" >
                    <cloudblue-connect:filters >
                        <cloudblue-connect:mono-filter type="EQ" property="type" value="setup" />
                        <cloudblue-connect:mono-filter type="NE" property="status" value="approved" />
                    </cloudblue-connect:filters>
                </cloudblue-connect:list-filter>
            </cloudblue-connect:filter>
        </cloudblue-connect:list-tier-config-requests>
    </flow>

    <flow name="listUsageFiles">
        <cloudblue-connect:list-usage-reports
                config-ref="CloudBlue_Connect_Config_Test">
            <cloudblue-connect:filter >
                <cloudblue-connect:in-filter property="status" >
                    <cloudblue-connect:values >
                        <cloudblue-connect:value value="accepted" />
                        <cloudblue-connect:value value="pending" />
                    </cloudblue-connect:values>
                </cloudblue-connect:in-filter>
            </cloudblue-connect:filter>
        </cloudblue-connect:list-usage-reports>
    </flow>

    <flow name="getUsageFile">
        <cloudblue-connect:get-usage-report
                config-ref="CloudBlue_Connect_Config_Test"
                id="${usage_report_id}"/>
    </flow>

    <flow name="listUsageRecords">
        <cloudblue-connect:list-usage-records
                config-ref="CloudBlue_Connect_Config_Test"/>
    </flow>

    <flow name="getUsageRecords">
        <cloudblue-connect:get-usage-record
                config-ref="CloudBlue_Connect_Config_Test"
                id="${usage_record_id}"/>
    </flow>

    <flow name="listProductsWithoutFilter">
        <cloudblue-connect:list-products config-ref="CloudBlue_Connect_Config_Test"/>
    </flow>

    <flow name="listProductsWithFilter">
        <cloudblue-connect:list-products config-ref="CloudBlue_Connect_Config_Test">
            <cloudblue-connect:filter >
                <cloudblue-connect:list-filter type="AND" >
                    <cloudblue-connect:filters >
                        <cloudblue-connect:mono-filter type="EQ" property="status" value="published" />
                        <cloudblue-connect:mono-filter type="NE" property="name" value="pepe" />
                    </cloudblue-connect:filters>
                </cloudblue-connect:list-filter>
            </cloudblue-connect:filter>
        </cloudblue-connect:list-products>
    </flow>

    <flow name="listProductItemsWithoutFilter">
        <cloudblue-connect:list-product-items config-ref="CloudBlue_Connect_Config_Test" id="${product_id}"/>
    </flow>

    <flow name="listProductItemsWithFilter">
        <cloudblue-connect:list-product-items config-ref="CloudBlue_Connect_Config_Test" id="${product_id}">
            <cloudblue-connect:filter >
                <cloudblue-connect:list-filter type="AND" >
                    <cloudblue-connect:filters >
                        <cloudblue-connect:mono-filter type="EQ" property="id" value="PRD-0000-0000-001" />
                        <cloudblue-connect:mono-filter type="NE" property="name" value="pepe" />
                    </cloudblue-connect:filters>
                </cloudblue-connect:list-filter>
            </cloudblue-connect:filter>
        </cloudblue-connect:list-product-items>
    </flow>

    <flow name="listUsageChunkFiles">
        <cloudblue-connect:list-usage-chunk-files
                config-ref="CloudBlue_Connect_Config_Test">
            <cloudblue-connect:filter >
                <cloudblue-connect:mono-filter type="EQ" property="usagefile.id" value="${usage_report_id}" />
            </cloudblue-connect:filter>
        </cloudblue-connect:list-usage-chunk-files>
    </flow>

    <flow name="getUsageChunkFiles">
        <cloudblue-connect:get-chunk-files
                config-ref="CloudBlue_Connect_Config_Test"
                id="${chunk_file_id}"/>
    </flow>
</mule>
