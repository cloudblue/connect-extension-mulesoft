<mule xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:http="http://www.mulesoft.org/schema/mule/http"
      xmlns:cloudblue-connect="http://www.mulesoft.org/schema/mule/cloudblue-connect"
      xsi:schemaLocation="http://www.mulesoft.org/schema/mule/core
            http://www.mulesoft.org/schema/mule/core/current/mule.xsd
            http://www.mulesoft.org/schema/mule/http 
            http://www.mulesoft.org/schema/mule/http/current/mule-http.xsd
            http://www.mulesoft.org/schema/mule/cloudblue-connect 
            http://www.mulesoft.org/schema/mule/cloudblue-connect/current/mule-cloudblue-connect.xsd">
    
    <http:listener-config name="listenerConfig">
        <http:listener-connection host="localhost" port="${port}"/>
    </http:listener-config>
    
    <flow name="createRequestServer">
        <http:listener path="/requests" config-ref="listenerConfig"/>
        <set-payload value="{'id':'${request_id}'}"/>
    </flow>

    <flow name="createBillingRequestServer">
        <http:listener path="/subscriptions/requests" config-ref="listenerConfig"/>
        <set-payload value="{'id':'${request_id}'}"/>
    </flow>

    <cloudblue-connect:config name="CloudBlue_Connect_Config_Test">
        <cloudblue-connect:connection token="ApiKey SU-000-000-000:fake-token-001"
                                      connectionTimeout="20000"
                                      endpoint="http://localhost:${port}"/>
    </cloudblue-connect:config>

    <flow name="createSuspendRequest">
        <cloudblue-connect:create-admin-hold-request
                config-ref="CloudBlue_Connect_Config_Test"
                requestType="SUSPEND" assetId="AS-0000-0000-0000"/>
    </flow>

    <flow name="createResumeRequest">
        <cloudblue-connect:create-admin-hold-request
                config-ref="CloudBlue_Connect_Config_Test"
                requestType="RESUME" assetId="AS-0000-0000-0000"/>
    </flow>

    <flow name="createCancelRequest">
        <cloudblue-connect:create-admin-hold-request
                config-ref="CloudBlue_Connect_Config_Test"
                requestType="CANCEL" assetId="AS-0000-0000-0000"/>
    </flow>

    <flow name="createPurchaseRequest">
        <cloudblue-connect:create-purchase-request
                config-ref="CloudBlue_Connect_Config_Test"
                productId="PRD-658-058-034" connectionId="CT-1564-0655"
                marketplaceId="MP-38701" externalId="TEST-ASSET-REQUEST-0001">
            <cloudblue-connect:customer externalId="TEST-CUSTOMER-0001" companyName="Test Corp. US">
                <cloudblue-connect:contact-info addressLine1="H-23"
                                                addressLine2="Lone Street"
                                                city="MSW" postalCode="762635" country="US">
                    <cloudblue-connect:contact firstName="First"
                                               lastName="Last"
                                               email="first.last@example.com"/>
                </cloudblue-connect:contact-info>
            </cloudblue-connect:customer>
            <cloudblue-connect:items>
                <cloudblue-connect:cbc-request-item id="PRD-635-752-204-0002" quantity="-1" />
            </cloudblue-connect:items>
        </cloudblue-connect:create-purchase-request>
    </flow>
    <flow name="createBillingRequest">
        <cloudblue-connect:create-billing-request
                config-ref="CloudBlue_Connect_Config_Test">
            <cloudblue-connect:new-billing-request
                    type="PROVIDER"
                    from="2019-01-01T00:00:00Z"
                    to="2019-02-01T00:00:00Z"
                    delta="1"
                    oum="monthly"
                    assetId="AS-000-000">
                <cloudblue-connect:items >
                    <cloudblue-connect:cbc-request-item id="PRD-000-000-000-001" quantity="23" />
                </cloudblue-connect:items>
                <cloudblue-connect:attribute-lists >
                    <cloudblue-connect:attribute-list key="key" value="value" />
                </cloudblue-connect:attribute-lists>
            </cloudblue-connect:new-billing-request>
        </cloudblue-connect:create-billing-request>
    </flow>
</mule>
